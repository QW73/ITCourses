<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITCourses" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>


        <!-- Surface -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/black_nav_bar</item>
        <item name="colorOnSurfaceVariant">@color/nav_bar_stroke</item>
        <item name="colorSurfaceContainer">@color/black_nav_bar_active_icon</item>
        <item name="colorSurfaceContainerLow">@color/black_nav_bar_active_icon_30</item>

        <item name="android:windowBackground">?attr/colorSurface</item>

        <item name="colorOutline">@color/dividing_line_color</item>
    </style>

</resources>